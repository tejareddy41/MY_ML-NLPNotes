{
  "name": "Tron Ares",
  "type": "dark",
  "colors": {
    // Base Editor
    "editor.background": "#0a0a0c",
    "editor.foreground": "#e6e6e6",
    "editor.lineHighlightBackground": "#1a1a1f55",
    "editor.selectionBackground": "#66000099",
    "editorCursor.foreground": "#ff1b1b",
    "editorWhitespace.foreground": "#2a2a30",
    "editorIndentGuide.activeBackground": "#ff1b1b",
    "editorIndentGuide.background": "#2a2a30",

    // Activity Bar
    "activityBar.background": "#0d0d10",
    "activityBar.foreground": "#ff1b1b",
    "activityBar.border": "#ff1b1b",
    "activityBarBadge.background": "#00e5ff",
    "activityBarBadge.foreground": "#0a0a0c",

    // Side Bar
    "sideBar.background": "#0d0d10",
    "sideBar.foreground": "#e6e6e6",
    "sideBar.border": "#ff1b1b",
    "sideBarTitle.foreground": "#ff1b1b",
    "sideBarSectionHeader.background": "#0a0a0c",
    "sideBarSectionHeader.foreground": "#ff1b1b",

    // Status Bar
    "statusBar.background": "#0a0a0c",
    "statusBar.foreground": "#ff1b1b",
    "statusBar.border": "#00e5ff",
    "statusBar.debuggingBackground": "#ff1b1b",
    "statusBar.debuggingForeground": "#0a0a0c",

    // Title Bar
    "titleBar.activeBackground": "#0a0a0c",
    "titleBar.activeForeground": "#ff1b1b",
    "titleBar.inactiveBackground": "#0d0d10",
    "titleBar.inactiveForeground": "#777",
    "titleBar.border": "#ff1b1b",

    // Tabs
    "tab.activeBackground": "#0a0a0c",
    "tab.activeForeground": "#ff1b1b",
    "tab.inactiveBackground": "#0d0d10",
    "tab.inactiveForeground": "#777",
    "tab.border": "#ff1b1b",
    "editorGroupHeader.tabsBackground": "#0d0d10",
    "editorGroupHeader.tabsBorder": "#ff1b1b",

    // Panels
    "panel.background": "#0a0a0c",
    "panel.border": "#ff1b1b",
    "panelTitle.activeForeground": "#ff1b1b",
    "panelTitle.inactiveForeground": "#777",

    // Explorer
    "list.activeSelectionBackground": "#330000aa",
    "list.activeSelectionForeground": "#ff1b1b",
    "list.inactiveSelectionBackground": "#1a1a1f",
    "list.hoverBackground": "#22222255",
    "list.hoverForeground": "#ff1b1b",
    "list.focusBackground": "#330000dd",
    "list.focusForeground": "#ff1b1b",

    // Dropdowns / Menus
    "dropdown.background": "#0d0d10",
    "dropdown.foreground": "#ff1b1b",
    "dropdown.border": "#00e5ff",

    "menu.background": "#0d0d10",
    "menu.foreground": "#e6e6e6",
    "menu.selectionBackground": "#330000aa",
    "menu.selectionForeground": "#ff1b1b",
    "menu.border": "#ff1b1b",

    // Buttons
    "button.background": "#ff1b1b",
    "button.foreground": "#0a0a0c",
    "button.hoverBackground": "#e60000",
    "button.secondaryBackground": "#222",
    "button.secondaryForeground": "#e6e6e6",
    "button.secondaryHoverBackground": "#333",

    // Scrollbars
    "scrollbarSlider.activeBackground": "#ff1b1b55",
    "scrollbarSlider.background": "#ff1b1b33",
    "scrollbarSlider.hoverBackground": "#ff1b1b77",

    // Notifications
    "notificationCenterHeader.background": "#0a0a0c",
    "notificationCenterHeader.foreground": "#ff1b1b",
    "notifications.background": "#0d0d10",
    "notifications.foreground": "#e6e6e6",
    "notificationLink.foreground": "#00e5ff",

    // Debug
    "debugToolBar.background": "#0d0d10",
    "debugToolBar.border": "#ff1b1b",
    "debugIcon.breakpointForeground": "#ff1b1b",
    "debugIcon.breakpointDisabledForeground": "#777",
    "debugIcon.breakpointUnverifiedForeground": "#ff9900",
    "debugIcon.breakpointCurrentForeground": "#00e5ff",

    // Git
    "gitDecoration.addedResourceForeground": "#00ff99",
    "gitDecoration.modifiedResourceForeground": "#ffcc00",
    "gitDecoration.deletedResourceForeground": "#ff4081",
    "gitDecoration.untrackedResourceForeground": "#00e5ff",
    "gitDecoration.ignoredResourceForeground": "#555",
    "gitDecoration.conflictingResourceForeground": "#ff1b1b",

    // Peek / Search
    "peekView.border": "#ff1b1b",
    "peekViewEditor.background": "#0d0d10",
    "peekViewEditor.matchHighlightBackground": "#66000099",
    "peekViewResult.background": "#0d0d10",
    "peekViewResult.matchHighlightBackground": "#330000aa",
    "peekViewTitle.background": "#0a0a0c",
    "peekViewTitleLabel.foreground": "#ff1b1b",

    // Terminal
    "terminal.background": "#0a0a0c",
    "terminal.foreground": "#e6e6e6",
    "terminalCursor.foreground": "#ff1b1b",
    "terminal.border": "#00e5ff",

    // Badges
    "badge.background": "#ff1b1b",
    "badge.foreground": "#0a0a0c"
  },

  // Token Colors (syntax highlighting)
  "tokenColors": [
    {
      "scope": ["comment"],
      "settings": { "foreground": "#777", "fontStyle": "italic" }
    },
    {
      "scope": ["keyword", "storage.type"],
      "settings": { "foreground": "#ff1b1b", "fontStyle": "bold" }
    },
    {
      "scope": ["variable", "string"],
      "settings": { "foreground": "#00e5ff" }
    },
    {
      "scope": ["function", "entity.name.function"],
      "settings": { "foreground": "#ff5555" }
    },
    {
      "scope": ["constant.numeric", "constant.language"],
      "settings": { "foreground": "#ff4081" }
    },
    {
      "scope": ["class", "entity.name.type.class"],
      "settings": { "foreground": "#ff9933" }
    },
    {
      "scope": ["punctuation", "delimiter"],
      "settings": { "foreground": "#ff1b1b" }
    }
  ],

  // Semantic Tokens
  "semanticTokenColors": {
    "variable.readonly": "#00e5ff",
    "property": "#ff5555",
    "method": "#ff5555",
    "stringLiteral": "#00e5ff",
    "numberLiteral": "#ff4081",
    "class": "#ff9933",
    "interface": "#ff1b1b",
    "enum": "#ff1b1b",
    "enumMember": "#ff4081"
  },

  // Terminal ANSI Palette
  "terminal.ansiBlack": "#0a0a0c",
  "terminal.ansiRed": "#ff1b1b",
  "terminal.ansiGreen": "#00ffcc",
  "terminal.ansiYellow": "#ffcc00",
  "terminal.ansiBlue": "#00e5ff",
  "terminal.ansiMagenta": "#ff4081",
  "terminal.ansiCyan": "#00ffff",
  "terminal.ansiWhite": "#e6e6e6",
  "terminal.ansiBrightBlack": "#2a2a30",
  "terminal.ansiBrightRed": "#ff5555",
  "terminal.ansiBrightGreen": "#33ffcc",
  "terminal.ansiBrightYellow": "#ffdd55",
  "terminal.ansiBrightBlue": "#33ccff",
  "terminal.ansiBrightMagenta": "#ff80ff",
  "terminal.ansiBrightCyan": "#66ffff",
  "terminal.ansiBrightWhite": "#ffffff"
}
